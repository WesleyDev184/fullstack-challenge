{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@guards/*": [
        "./src/guards/*"
      ],
      "@interceptors/*": [
        "./src/interceptors/*"
      ],
      "@decorators/*": [
        "./src/decorators/*"
      ],
      "@dto/*": [
        "./src/dto/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}